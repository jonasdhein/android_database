<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".view.UsuarioActivity">

    <TextView
        android:id="@+id/lblId_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LabelBold"
        android:text="ID"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LabelBold"
        android:text="Login" />

    <EditText
        android:id="@+id/txtLogin_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LabelBold"
        android:text="@string/password_text" />

    <EditText
        android:id="@+id/txtSenha_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LabelBold"
        android:text="@string/mail_text" />

    <EditText
        android:id="@+id/txtEmail_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LabelBold"
        android:text="@string/phone_text" />

    <br.com.sapereaude.maskedEditText.MaskedEditText
        android:id="@+id/txtTelefone_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        app:allowed_chars="1234567890"
        app:mask="(##) # ####-####"
        android:hint="(51) 9 9876-1234"
        app:keep_hint="true"
        />

    <Button
        android:id="@+id/btnExcluir_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_text"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        style="@style/BotaoVermelho" />

</LinearLayout>